{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Debug main.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/main.py",
            "console": "integratedTerminal",
            "args": [
                "--name",
                "ExampleTorrent",
                "--labels",
                "Send to User",
                "--file",
                "path/to/file.epub",
            ],
            "env": {
                "CONFIG_PATH": "${workspaceFolder}/config_dev.yaml",
            }
        }
    ]
}